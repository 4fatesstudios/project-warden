.menu-root {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    top: 10px;
}

.menu-title {
    font-size: 24px;
    -unity-text-align: middle-center;
    margin-bottom: 20px;
}

.menu-button {
    width: 200px;
    height: 40px;
    font-size: 16px;
    -unity-text-align: middle-center;
    cursor: link;
}

.menu-button:disabled {
    background-color: #444;
    color: #aaa;
}
