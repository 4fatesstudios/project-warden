.crafting-root {
    flex-direction: column;
    align-items: center;
    gap: 10px;
    padding: 20px;
}

.slot-container {
    flex-direction: row;
    justify-content: center;
    gap: 10px;
}

.ingredient-slot {
    width: 60px;
    height: 60px;
    font-size: 24px;
}

.craft-button {
    margin-top: 10px;
    width: 200px;
    height: 40px;
}

.back-button {
    margin-top: 10px;
    width: 120px;
    height: 35px;
}

.result-label {
    margin-top: 10px;
    font-size: 16px;
}
